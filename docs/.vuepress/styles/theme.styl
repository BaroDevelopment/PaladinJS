$vue-color = #4fc08d
$bg-color = #151515
$MQNarrow = 959px
$MQMobile = 719px
$MQMobileNarrow = 419px
$purple = #fc52fb;

html
  background-color $bg-color

body
  background-color $bg-color
  color desaturate(lighten($bg-color, 80%), 50%)
  height: 100%

.search-box
  input
    border-color desaturate(lighten($bg-color, 30%), 30%)
    background-color #2a2a2a
    color desaturate(lighten($bg-color, 80%), 50%)
    &.focused
      border-color: desaturate(lighten($purple, 10%), 10%)

  .suggestions
    background-color desaturate(lighten($bg-color, 15%), 10%)
    border 0

  .suggestion
    background-color: $bg-color;
    a
      color desaturate(lighten($bg-color, 70%), 70%)
    &.focused
      text-color desaturate(lighten($purple, 10%), 10%)
      background-color $bg-color
      a
        color: $purple;

.navbar
  border-bottom-color desaturate(lighten($purple, 10%), 10%)
  height: $navbarHeight;
  border-bottom: 1px solid $purple;
  background-color $bg-color
  .site-name
    color desaturate(lighten($purple, 10%), 10%)

  .links
    background-color $bg-color
    border-bottom-color: $purple
    a
      &:hover
      &:active
      &:active
      &:focus
        border-bottom-color: $purple
    border-bottom-color: $purple

.sidebar
  a.sidebar-link
    color desaturate(lighten($bg-color, 80%), 50%)
    &:hover,
    &:focus,
    &.active
      color $purple
  .nav-links
    border-bottom-color desaturate(lighten($purple, 10%), 10%)
    border-right-color desaturate(lighten($purple, 10%), 10%)
  //font-size: 15px;
  background-color $bg-color
  border-right: 1px solid $purple;
  .sidebar-heading
    color desaturate(lighten($bg-color, 80%), 50%)
    &.open,
    &:hover
      color desaturate(lighten($purple, 10%), 10%)
  a
    &:hover,
    &:focus,
    &.active
      border-left-color desaturate(lighten($purple, 10%), 10%)

.nav-links
  a
    color desaturate(lighten($bg-color, 80%), 50%)

    &:hover,
    &:focus,
    &.router-link-active
      color #fff

.nav-item a:not(.external).router-link-active
  border-bottom-color $purple

.home
  .hero
    .description
      color desaturate(lighten($bg-color, 50%), 50%)
  .features .footer
    border-top-color desaturate(lighten($bg-color, 10%), 10%)
  .feature
    h2
      color desaturate(lighten($bg-color, 70%), 40%)
    p
      color desaturate(lighten($bg-color, 50%), 50%)
  .footer
    color desaturate(lighten($bg-color, 50%), 50%)
    border-image url("https://cdn.discordapp.com/attachments/396964573007052800/547342790904774671/Loading.gif") 100% 0 0 0;
  .features
    border-image url("https://cdn.discordapp.com/attachments/396964573007052800/547342790904774671/Loading.gif") 100% 0 0 0;

blockquote
  font-size: 1.2rem;
  color: #999;
  border-left: 0.25rem solid cyan;
  background rgba(255, 255, 255, 0.08)

table
  border-collapse: collapse;
  margin: 1rem 0;
  display: block;
  overflow-x: auto;

tr
  border-top: 1px solid #dfe2e5;
  &:nth-child(2n)
    background-color: #2a2a2a;

th, td
  border: 1px solid #dfe2e5;
  padding: 0.6em 1em;
  border-color: hsla(0, 0%, 100%, .1);

a
  font-weight: 500;
  color: dodgerblue;
  text-decoration: none;

p a code
  font-weight: 400;
  color: $blueAccentColor;

kbd
  background: #eee;
  border: solid 0.15rem #ddd;
  border-bottom: solid 0.25rem #ddd;
  border-radius: 0.15rem;
  padding: 0 0.15em;

ul ol
  padding-left: 1.2em

p, ul, ol
  line-height: 1.7

hr
  //border-top: 1.5px solid #eaecef;
  //border-top-color: hsla(0, 0%, 100%, .1);
  border-image url("https://cdn.discordapp.com/attachments/396964573007052800/547342790904774671/Loading.gif") 100% 0 0 0;

strong
  font-weight: 600

.home .hero .action-button
  background-color: #ff25cc
  &:hover
    background-color: #00c8ff

.page-edit .last-updated .prefix
  color desaturate(lighten($bg-color, 80%), 50%)